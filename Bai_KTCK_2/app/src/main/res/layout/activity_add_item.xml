<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Add_item"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC107"
        android:text="Thêm Cây Xanh"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />
    <TextView
        android:text="Tên khoa học"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_tenkh"
        android:textSize="22dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="350dp"
        android:paddingLeft="14dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:background="@drawable/edt_border"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Tên thường gọi"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:textSize="22dp"
        android:paddingTop="8dp"
        android:paddingLeft="14dp"
        android:lines="1"
        android:id="@+id/edt_tentg"
        android:ellipsize="end"
        android:paddingBottom="8dp"
        android:layout_gravity="center"
        android:background="@drawable/edt_border"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Màu sắc"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:textSize="22dp"
        android:paddingTop="8dp"
        android:paddingLeft="14dp"
        android:lines="1"
        android:id="@+id/edt_mausac"
        android:ellipsize="end"
        android:paddingBottom="8dp"
        android:layout_gravity="center"
        android:background="@drawable/edt_border"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Đặc tính"
        android:textSize="20dp"
        android:lines="1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:textSize="22dp"
        android:paddingTop="8dp"
        android:paddingLeft="14dp"
        android:lines="1"
        android:id="@+id/edt_dactinh"
        android:ellipsize="end"
        android:paddingBottom="8dp"
        android:layout_gravity="center"
        android:background="@drawable/edt_border"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Ảnh"
        android:textSize="20dp"
        android:lines="1"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:textSize="22dp"
        android:paddingTop="8dp"
        android:paddingLeft="14dp"
        android:lines="1"
        android:id="@+id/edt_link"
        android:ellipsize="end"
        android:paddingBottom="8dp"
        android:layout_gravity="center"
        android:background="@drawable/edt_border"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="26dp"
        android:text="save"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:id="@+id/btn_save"
        android:backgroundTint="#FFC107"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edt_border"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="26dp"
        android:text="back"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:id="@+id/btn_back"
        android:backgroundTint="#FF5722"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edt_border"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
</LinearLayout>